bool BitString::operator[](size_t i) const {
    size_t index = i / 256;
    size_t bit = i % 256;
    int lane = bit / 64; 
    int bit_in_lane = bit % 64; 
    const uint64_t* data = reinterpret_cast<const uint64_t*>(bs + index);
    return data[lane] & (1ULL << bit_in_lane);
}

