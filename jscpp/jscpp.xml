    for (size_t r = 0; r < pauli.size() / 2; ++r) {
        xptr = pauli[2 * r].xs; 
        word* row_dst = M->data + r * M->rowstride; 
        const __m256i* row_src = pauli[r * ((num_bits))].xs; 

        for (size_t v = 0; v < pauli[0].num_words; ++v) {
