    __m256i* bs = nullptr;
    size_t num_bits = 0;
    size_t num_words = 0;

    void allocate(size_t bits) {
        num_bits = bits;
        num_words = (bits + 255) / 256;
        bs = (__m256i*)_mm_malloc(num_words * sizeof(__m256i), sizeof(__m256i));
        if (!bs) throw std::bad_alloc();
        std::memset(bs, 0, num_words * sizeof(__m256i));
    }

    // Destructor
    ~BitString() {
        _mm_free(bs);
    }

