    os << "This sample loop repeats for " << sl.repeat << " times\n"; 
    os << "There are " << sl.circ_lst.size() << " many elements in the loop body \n"; 
    for (const Sample& s : sl.circ_lst) {
        std::visit([&os](const auto& _s) { os << _s; }, s); 
